{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["public/components/*"],
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"],
      "@root/*": ["*"]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "public/components/audio_processor.js"],
  "exclude": ["node_modules"]
}
